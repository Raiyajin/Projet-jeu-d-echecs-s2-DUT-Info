package fr.raiyajin.jeu;
import fr.raiyajin.projet_echec.*;
import java.util.*;


public class Joueur {
	private String nom;
	private Scanner nom_joueur;

	public Joueur(String nom) {
		this.nom = nom;
	}
	
	public Joueur() { //Constructeur vide pour la m√©thode init
		this.init();
		
	}
	
	public String getNom() {
		return this.nom;
	}
	
	public void setNom(String nom) {
		this.nom = nom;
	}
	
	public void init() {
		int i = 1;
		if (nom_joueur==null) {
		}
		else {
			i = i + 1;
		}
		System.out.println("Entrez le nom du joueur " + i);
		Scanner nom_joueur = new Scanner(System.in);
		this.setNom(nom_joueur.nextLine());
		System.out.println("Le nom du joueur "+ i +" est: "+ this.getNom());
		
		
	}
}

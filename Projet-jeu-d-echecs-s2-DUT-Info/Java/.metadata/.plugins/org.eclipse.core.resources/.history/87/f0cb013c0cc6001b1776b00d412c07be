package fr.raiyajin.projet_echec;

public class Cavalier extends Piece{
	int x;
	int y;
	String nom = "Cavalier";
	
	public Cavalier(String nom, String apparence) {
		this.nom = nom;
		this.apparence = apparence;
	}
	
	public int Couleur() {
		int couleur = 0;
		for (int i=0; i<Blanc.length; i++) {
			if (this.apparence == Blanc[i]) {
				couleur = 1;
				
			}
			else if (this.apparence == Noir[i]){
				couleur = 2;
			}
		}
		return couleur;
	}
	
	public boolean coupPossible(int x, int y, int x2, int y2) {
		boolean possible = true;
		int couleur = Couleur();
		if (couleur == 1) {
			if (x2==x || x2==x+2 || x2==x-2) {
				if (y-y2==-2 || y-y2==-1 || y-y2==1 || y-y2==2) {
				 
			}
			
		}
		else {
			possible = false;
			
		}
		}
		return possible;
	};
	
	public void deplacement() {
		//TODO
	}

}



